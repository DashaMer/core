{
    "id": "elasticsearch",
    "cpus": 0.4,
    "mem": 400,
    "cmd": "./bootstrap.sh",
    "requirePorts": true,
    "ports": [31000, 31001],
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "docker-registry.service.consul:5000/elasticsearch",
            "forcePullImage": true,
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 0,
                    "servicePort" : 0,
                    "hostPort": 31000,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 0,
                    "servicePort" : 0,
                    "hostPort": 31001,
                    "protocol": "tcp"
                }
            ],
            "privileged": false
        }
    },
    "constraints": [["hostname", "UNIQUE"]],
    "backoffSeconds": 1,
    "backoffFactor": 1.15,
    "maxLaunchDelaySeconds": 3600,
    "upgradeStrategy": {
        "minimumHealthCapacity": 0.5,
        "maximumOverCapacity": 0.2
    }
}
